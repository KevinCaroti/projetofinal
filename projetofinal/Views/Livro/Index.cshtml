@model IEnumerable<projetofinal.Models.livro>

    
@{
    ViewData["Title"] = "Karoti's Livraria";
}

<div class="carousel">
    <div class="carousel-track">
        <div class="carousel-slide">
            <img src="~/fotos/8619.jpeg" alt="Slide 1">
        </div>
        <div class="carousel-slide">
            <img src="~/fotos/por_do_sol.jpeg" alt="Slide 2">
        </div>
        <div class="carousel-slide">
            <img src="~/fotos/11-dicas-infaliveis-para-fotografia-de-paisagem-exemplos-surpreendentes-780x470.jpg" alt="Slide 3">
        </div>
    </div>
    <div class="carousel-buttons">
        <button class="carousel-button" id="prev">&#10094;</button>
        <button class="carousel-button" id="next">&#10095;</button>
    </div>
</div>

<div class="text-center">
    <h1 class="display-4">Welcome to Livraria Karoti</h1>
    <p>Onde nada é Baratoti!!!</p>

    <section>
        <div class="container">
            <div class="row">
                @foreach (var livro in Model)
                {
                    <div class="col-md-4">
                        <img src="~/fotos/banana.jpg" alt="Book 1" class="zoomable" id="image" width="70%">  
                        <h3>@livro.Nome</h3>
                        <p><strong>Autor:</strong> @livro.Autor</p>
                        <p><strong>Preço:</strong> @livro.Preco€</p>
                        <button class="btnp">Comprar Já</button>
                    </div>
                }
            </div>
        </div>
    </section>
</div>
